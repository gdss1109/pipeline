podTemplate(label: 'mypod', containers: [
    containerTemplate(name: 'kubectl', image: 'k8s-kubectl:v1.10.0', command: 'cat', ttyEnabled: true),
    containerTemplate(name: 'hellowhale', image: 'maverick0803/hellowhale:latest', command: 'cat', ttyEnabled: true)
  ]) {
    node('mypod') {

        stage('do some Docker work') {
        withCredentials([[$class: 'UsernamePasswordMultiBinding', 
                        credentialsId: 'dockerhub',
                        usernameVariable: 'DOCKER_HUB_USER', 
                        passwordVariable: 'DOCKER_HUB_PASSWORD']]) {
                    
                    sh """
                        docker pull hellowhale
                        docker tag hellowhale ${env.DOCKER_HUB_USER}/ubuntu:${env.BUILD_NUMBER}
                        """
                    sh "docker login -u ${env.DOCKER_HUB_USER} -p ${env.DOCKER_HUB_PASSWORD} "
                    sh "docker push ${env.DOCKER_HUB_USER}/hellowhale:${env.BUILD_NUMBER} "
                }
            }
        }

        stage('do some kubectl work') {
            container('kubectl') {

                withCredentials([[$class: 'UsernamePasswordMultiBinding', 
                        credentialsId: 'dockerhub',
                        usernameVariable: 'DOCKER_HUB_USER',
                        passwordVariable: 'DOCKER_HUB_PASSWORD']]) {
                    
                    sh "kubectl set image deployment/hellowhale hellowhale=${env.DOCKER_HUB_USER}/hellowhale:${env.BUILD_NUMBER}"
                }
            }
        }
    }
}
